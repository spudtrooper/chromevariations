{
  "manifest_version": 3,
  "name": "Phrase Variations",
  "version": "1.0",
  "author": "Jeff Palm",
  "description": "Get variations for the selected phrase",
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "host_permissions": [
    "https://api.openai.com/"
  ],
  "permissions": [
    "activeTab",
    "contextMenus",
    "windows",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ]
    }
  ]
}